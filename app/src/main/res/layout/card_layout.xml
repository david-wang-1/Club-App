<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        card_view:cardElevation="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/club_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left"
                android:paddingLeft="20dp"
                android:textSize="36sp"
                android:textStyle="normal"
                android:text="Club Name"
                android:layout_gravity="start"
                android:textAlignment="viewStart"
                android:paddingTop="20dp" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/club_description"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:textSize="18sp"
                android:paddingBottom="20dp" />

            <LinearLayout
                android:id="@+id/LinearLayout02"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_alignParentBottom="true">
                <Button
                    android:id="@+id/club_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" android:text="Go To Club Page"
                    android:layout_gravity="start"
                    android:textAlignment="textStart"
                    android:background="#FFFFFF"
                    android:textStyle="normal|bold"
                    android:paddingLeft="20dp"
                    android:textColor="#F79E21">
                </Button>

                <TextView
                    android:id="@+id/point"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:background="@color/tw__composer_red"
                    android:gravity="center"
                    android:singleLine="true"
                    android:layout_marginRight="20dp"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:text="Unread Notifications" />
            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>